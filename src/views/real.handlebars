<!-- src/views/real.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    {{> navbar}}

    <div class="container mt-4">
        <h1>{{title}}</h1>
        <div class="row">
            {{#each cart}}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{this.photo}}" class="card-img-top" alt="{{this.name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">Precio: ${{this.price}}</p>
                            <p class="card-text">Cantidad: {{this.quantity}}</p>
                            <form action="/remove-from-cart/{{this._id}}" method="POST">
                                <button type="submit" class="btn btn-danger">Eliminar del carrito</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        {{#if cart.length}}
        <div class="text-center mt-4">
            <form action="/checkout" method="POST">
                <button type="submit" class="btn btn-success">Finalizar Compra</button>
            </form>
        </div>
        {{else}}
        <p>Tu carrito está vacío</p>
        {{/if}}
    </div>

    <footer class="bg-light text-center py-3">
        <p>&copy; 2024 TuMatteoli. Todos los derechos reservados.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
